target :CDTDatastore do
   pod 'FMDB', '= 2.6'
   pod 'CocoaLumberjack', '~> 2.0'
   use_frameworks!
end

target :CDTDatastoreTests do
    pod "MRDatabaseContentChecker"
    pod 'Specta'
    pod 'Expecta'
    pod 'OCMock'
    pod 'OHHTTPStubs'
    use_frameworks!
end

target :CDTDatastoreReplicationAcceptanceTests do
    pod "Unirest", :git => 'https://github.com/mikerhodes/unirest-obj-c.git'
    pod 'TRVSMonitor'
    pod 'NSData+Base64'
    use_frameworks!
end

target :CDTDatastoreEncryption do
   pod 'FMDB/SQLCipher', '= 2.6'
   xcconfig = { 'OTHER_CFLAGS' => '$(inherited) -DENCRYPT_DATABASE' }
   pod 'CocoaLumberjack', '~> 2.0'
   pod 'SQLCipher/fts', '~> 3.1'
   use_frameworks!
end

target :CDTDatastoreEncryptionTests do
    pod 'OCMock'
   use_frameworks!
end
